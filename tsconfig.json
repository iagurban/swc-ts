{
  "compilerOptions": {
    "target": "ES2024",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "CommonJS",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "incremental": true,
    "rootDir": ".",
    "baseUrl": ".",

    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "include": ["src", "test"]
}
